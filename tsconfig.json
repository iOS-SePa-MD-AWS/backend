{
    "compilerOptions": {
        "target": "ES2020",
        "types": ["node"],
        "module": "CommonJS",
        "outDir": "build",
        "declaration": false,
        "strict": true,
        "allowSyntheticDefaultImports": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "sourceMap": false,
        "typeRoots": ["./node_modules/@types"],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "*": ["typings"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "build/**"]
}